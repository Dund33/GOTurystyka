    <dl class="row">
        <dt class="col-sm-2">Points in the segment</dt>
        |@foreach (var point in Model.Points)
        {
            <dd>@point.Name|</dd>
        }
    </dl>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Segment.Id">Edit</a> |
